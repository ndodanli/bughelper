
@{
    ViewBag.Title = "Soru";
}
<div class="container">
    <div class="soru-baslik">
        <div>
            @foreach (var item in ViewBag.sorularVeriTabani)
            {
                if (item.Id.ToString() == ViewBag.soruid)
                {
                    
                    @model BugHelper.Models.CevaplarModel
                    using (Html.BeginForm("Cevapla", "Cevaplar"))
                    {
                        <div class="cevap-text-box">
                            @Html.TextBoxFor(i => i.Cevap)
                        </div>
                            @Html.HiddenFor(i => i.SorularModelId, new { Value = item.Id })
                        <div class="cevapla-button">
                            <button type="submit" class="btn btn-default">Sor</button>
                        </div>
                        
                    }

                    <div class="soru-sahibi">
                        @item.SoruSahibi
                    </div>
                    <div class="baslik">
                        @item.SoruBaslik
                    </div>
                    <div class="soru-icerik">
                        @item.SoruIcerik
                    </div>
                }
            }
        </div>
    </div>
    @Html.Partial("~/Views/Cevaplar/Cevapla.cshtml")
</div>



