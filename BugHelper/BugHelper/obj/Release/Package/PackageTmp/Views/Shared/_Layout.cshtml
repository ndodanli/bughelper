<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0,0,0,.0975);
            transition-property: height;
            transition-duration: 0.2s;
            transition-timing-function: ease-in-out;
            transition-delay: 0s;
            height: 53px;
            align-items: center;
            flex-direction: row;
            display: flex;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1001;
        }

            header .container {
                align-items: center;
                display: flex;
                position: relative;
                height: 52px;
                justify-content: space-between;
                padding: 0;
                overflow: visible;
            }

                header .container .left {
                    width: 168px;
                    display: flex;
                }

                header .container .ara {
                    display: flex;
                    width: 500px;
                    height: 33px;
                    position: relative;
                }

                header .container .right {
                    width: 300px;
                }

        .inclusive {
            background-color: #f6f6f6;
            min-height: 100vh;
            padding-top: 53px;
            display: flex;
            flex-direction: column;
        }

            .inclusive > .container {
                display: flex;
                margin-right: 100px;
                margin-left: 120px;
                justify-content: flex-start;
                align-content: flex-start;
            }

                .inclusive > .container .sol-bolme {
                    width: 130px;
                    padding-top: 15px;
                    margin-right: 20px;
                }

                .inclusive > .container .sag-bolme {
                    display: flex;
                    justify-content: space-between;
                    align-content: flex-start;
                    flex-wrap: wrap;
                    max-width: 100%;
                    width: 815px;
                    padding-top: 15px;
                }
                .footer{
                    bottom: 0;
                    padding: 10px;
                    z-index: 9999;
                    line-height: 1.4000rem;
                    font-size: 0.900rem;
                    text-align: center;
                    border-top: 1px solid #edeae3;
                    left: 0;
                    position: fixed;
                    background: #fff;
                    width: 100%;
                }
    </style>
</head>
<body>
    <div class="inclusive">

        <header>
            <div class="container">
                <img src="https://cdn.dribbble.com/users/248947/screenshots/4075217/bug.png" style="width:65px" />
                <div class="left">
                    <a href="/">
                        <strong style="color:red; border: 1px solid red;">BugHelper</strong>
                    </a>

                </div>
                <div class="ara">

                </div>
                <div class="right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <label class="label label-info">
                            @User.Identity.Name
                        </label>
                        <a href="/Account/Logout" class="btn btn-danger">Logout</a>
                    }
                    else
                    {
                        <div style="float: left">
                            <a style="float:left" href="/Account/Login">
                                <img src="https://img.icons8.com/ios-glyphs/30/000000/cash-register-euro.png" style="margin-right:5px">
                                <div style="float:right; margin-right:13px;">Giriş Yap</div>
                            </a>

                        </div>

                        <div>
                            <a style="float:left;" href="/Account/Register">
                                <img src="https://img.icons8.com/ios-glyphs/30/000000/cash-register-euro.png" style="margin-right:5px">
                                <div style="float:right;">Kayıt Ol</div>
                            </a>

                        </div>

                    }
                </div>
            </div>
        </header>
        <div class="container">
            <div class="sol-bolme">
            </div>

            <div class="sag-bolme">
                @RenderBody()

            </div>
        </div>
    </div>
    <footer class="footer">
        <p>
            DENEME FOOTER
        </p>

   
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>